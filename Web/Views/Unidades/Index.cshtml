@model IEnumerable<Web.Models.Unidades>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Listagem de Unidades</h1><!-- Titulo da pagina centralizado-->


<table id="myTable" class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.URG)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.NomeUE)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.URG)
            </td>

            <td>
                <a asp-action="Details" asp-route-id="@item.IdUE">
                    @Html.DisplayFor(modelItem => item.NomeUE)
                </a>

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>

            <td>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.IdUE" class="btn btn-outline-primary">Edit</a>

                    <a asp-action="Delete" asp-route-id="@item.IdUE" class="btn btn-outline-danger">Delete</a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>

<p class="float-right">
    <a asp-action="Create" class="btn btn-success">Nova Unidade</a>
</p>

@section Scripts
{
    <!-- script para o funcionamento do DataTables, invoca o ID da tabela myTable
        URL da tradução
        -->

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
                }
            });
        });
    </script>
}