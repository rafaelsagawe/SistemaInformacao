@model IEnumerable<Web.Models.Linha>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroLinha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tronco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroLinha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tronco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slot)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdLinha">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdLinha">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdLinha">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
