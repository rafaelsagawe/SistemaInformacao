@model IEnumerable<Web.Models.Tarefa>

@{
    ViewData["Title"] = "Tarefas";
}

<h1 class="text-center">Minhas tarefas</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary"> <i class="fa fa-plus-circle"></i> Adicionar tarefa</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.concluido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dataCriacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <!-- Alteração das tarefas realizadas-->


        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.concluido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dataCriacao)
            </td>
            <td class="btn btn-group">
                <a asp-action="Details" asp-route-id="@item.id" class="btn btn-outline-info"><i class="fa fa-search"></i></a>
                <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-outline-warning"><i class="fa fa-edit"></i></a>


                <!-- Modals-->
                <!-- Modal Excluir  inicio =====================================
    Para funcionar de forma correta e necessario criar as model com os id's  das tarefas
    -->
                <!-- Button trigger modal -->

                <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#DeleteModal-@item.id">
                    <i class="fa fa-trash"></i>
                </button>

                <!-- Modals -->
                <div class="modal fade" id="DeleteModal-@item.id" tabindex="-1" aria-labelledby="DeleteModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="DeleteModalLabel">Deseja excluir Tarefa</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p>
                                    @item.titulo
                                </p>
                                <p>
                                    @item.dataCriacao
                                </p>
                                <p>
                                    @item.dataAlteracao
                                </p>
                                @item.concluido
                            </div>

                            <div class="modal-footer align-items-center">
                                <a asp-action="Deletar" asp-route-id="@item.id" class="btn btn-danger"><i class="fa fa-trash"></i></a>

                                <button type="button" class="btn btn-success" data-dismiss="modal">Manter</button>


                            </div>
                        </div>
                    </div>
                </div>
                <!-- Modal Excluir  Final ===================================== -->
                <!-- <a asp-action="Conformar" asp-route-id="@item.id" class="btn btn-outline-warning"><i class="fa fa-check"></i></a> -->

            </td>
        </tr>





}
    </tbody>
</table>
