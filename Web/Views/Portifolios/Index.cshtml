@model IEnumerable<ControleAtivosTI.Models.Portifolio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeSistema)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomePlataforma)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Acesso)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.EstadoDesenvolvimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Criticidade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeSistema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomePlataforma)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Acesso)
            </td>
 
            <td>
                @Html.DisplayFor(modelItem => item.EstadoDesenvolvimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Criticidade)
            </td>
            <td>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@item.IdPortefolio" class="btn btn-outline-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.IdPortefolio" class="btn btn-outline-secondary">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.IdPortefolio" class="btn btn-outline-danger">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
